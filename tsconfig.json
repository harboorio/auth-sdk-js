{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": false,
        "declaration": false,
        "allowJs": true,
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "noImplicitOverride": true,
        "noUnusedLocals": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "paths": {
            "@src/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
